						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"const apolice_numero = pm.collectionVariables.get(\"apolice_numero\");",
									"const base_url_api = pm.collectionVariables.get(\"base_url\");",
									"",
									"console.log(\"numero: \", apolice_numero);",
									"console.log(\"url: \", base_url_api);",
									"",
									"if (!apolice_numero) {",
									"    console.error(\"Variável 'apolice_numero' não definida no ambiente.\");",
									"} else {",
									"    pm.sendRequest({",
									"        url: `${base_url_api}/apolices/${apolice_numero}`,",
									"        method: 'GET'",
									"    }, (err, res) => {",
									"        if (err) {",
									"            console.error(\"Erro ao buscar apólice:\", err);",
									"        } else if (res.code !== 200) {",
									"            console.error(`Erro na resposta (${res.code}):`, res.text());",
									"        } else {",
									"            const body = res.json();",
									"",
									"            const inicioStr = body.inicio_vigencia;",
									"            if (!inicioStr) {",
									"                console.error(\"Campo 'inicio_vigencia' não encontrado na resposta.\");",
									"                return;",
									"            }",
									"",
									"            const inicio = new Date(inicioStr);",
									"",
									"            if (isNaN(inicio.getTime())) {",
									"                console.error(\"Data inválida em 'inicio_vigencia':\", inicioStr);",
									"                return;",
									"            }",
									"",
									"            const diasExtras = Math.floor(Math.random() * (365 - 30 + 1)) + 30;",
									"",
									"            const fim = new Date(inicio);",
									"            fim.setDate(inicio.getDate() + diasExtras);",
									"",
									"            const fimFormatado = fim.toISOString().split('T')[0];",
									"",
									"            pm.collectionVariables.set(\"endosso_fim_vigencia\", fimFormatado);",
									"        }",
									"    });",
									"}",
									""
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
