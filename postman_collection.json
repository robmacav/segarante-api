							"listen": "test",
							"script": {
								"exec": [
									"const response = pm.response.json();",
									"",
									"const apolice_numero = response.numero;",
									"",
									"pm.expect(apolice_numero).to.exist;",
									"pm.expect(apolice_numero).to.be.a(\"number\");",
									"",
									"pm.collectionVariables.set(\"apolice_numero\", apolice_numero);",
									""
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						},
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"let hoje = new Date();",
									"let inicio = new Date(hoje);",
									"let fim = new Date(hoje);",
									"",
									"inicio.setDate(hoje.getDate() + 1);",
									"fim.setDate(inicio.getDate() + 365);",
									"",
									"pm.collectionVariables.set(\"apolice_inicio_vigencia\", inicio.toISOString().split('T')[0]);",
									"pm.collectionVariables.set(\"apolice_fim_vigencia\", fim.toISOString().split('T')[0]);",
									"pm.collectionVariables.set(\"apolice_importancia_segurada\", Math.floor(Math.random() * 100000 + 10000));",
									""
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
