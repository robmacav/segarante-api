			"name": "Endosso",
			"item": [
				{
					"name": "Aumentar IS",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"const apolice_numero = pm.collectionVariables.get(\"apolice_numero\");",
									"const base_url_api = pm.collectionVariables.get(\"base_url\");",
									"",
									"if (!apolice_numero) {",
									"    console.error(\"Variável 'apolice_numero' não definida no ambiente.\");",
									"} else {",
									"    pm.sendRequest({",
									"        url: `${base_url_api}/apolices/${apolice_numero}`,",
									"        method: 'GET'",
									"    }, (err, res) => {",
									"        if (err) {",
									"            console.error(\"Erro ao buscar apólice:\", err);",
									"        } else if (res.code !== 200) {",
									"            console.error(`Erro na resposta (${res.code}):`, res.text());",
									"        } else {",
									"            const body = res.json();",
									"",
									"            const apoliceImportancia = parseFloat(body.importancia_segurada) || 0;",
									"            const acrescimo = Math.floor(Math.random() * 10000) + 1;",
									"            const apoliceAtualizada = apoliceImportancia + acrescimo;",
									"",
									"            pm.collectionVariables.set(\"endosso_importancia_segurada\", apoliceAtualizada);",
									"        }",
									"    });",
									"}",
									""
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"importancia_segurada\": \"{{endosso_importancia_segurada}}\",\n    \"apolice_numero\": \"{{apolice_numero}}\"\n}\n",
